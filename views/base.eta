<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      <%_ if (it.page?.title !== it.site.title) { %><%_= it.page?.title %> - <% } %>
      <%_= it.site.title _%>
    </title>
    <meta name="description" content="<%= it.page?.description ? it.page.description : it.site.description %>">
    <link rel="stylesheet" href="/ter.css">
    <link rel="stylesheet" href="/hljs.css">
    <link rel="icon" href="data:;base64,iVBORw0KGgo=" />
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%= it.page?.title ? it.page.title : it.site.title %>">
    <meta name="twitter:description" content="<%= it.page?.description? it.page.description : it.site.description %>">
    <meta property="og:type" content="article">
    <meta property="og:title" content="<%= it.page?.title? it.page.title : it.site.title %>">
    <meta property="og:description" content="<%= it.page?.description ? it.page.description : it.site.description %>">
    <meta property="og:url" content="<%= it.site.url %>">
    <%~ include("head") %>
  </head>

  <body>
    <% if (it.includeRefresh) { %>
    <%~ includeFile('refresh') %>
    <% } %>

    <header class="header">
      <nav class="breadcrumbs" aria-label="breadcrumb">
        <ol class="breadcrumbs">
          <% it.breadcrumbs.forEach((crumb, index) => { %>
            <li class="breadcrumbs-item
            <%_= crumb.isTag ? ' breadcrumbs-item--tag' : '' %>
            <%_= crumb.current ? ' breadcrumbs-item--current' : '' %>">
              <% if (crumb.url !== "") { %>
              <a href="<%= crumb.url %>"><%= crumb.slug %></a>
              <% } else { %>
              <%= crumb.slug %>
              <% } %>
            </li>
          <% }) %>
        </ol>
      </nav>

      <div class="metadata">
        <% if (it.page?.description) { %>
        <div><%= it.page.description %></div>
        <% } %>

        <div>
          <% if (it.page?.date && it.page?.readableDate) { %>
          <time class="metadata-time" datetime="<%= it.page.date %>"><%= it.page.readableDate %></time>
          <% } %>

          <% if (it.page?.tags?.length > 0 ) { %>
          <ul class="metadata-tags">
            <% it.page.tags.forEach((tag) => { %>
            <li class="metadata-tags-tag">
              <a href="<%= `/tag/${tag}` %>">
                <%_= `${tag}` _%>
              </a>
            </li>
            <% }) %>
          </ul>
          <% } %>
        </div>
      </div>
    </header>

    <main>
      <%~ it.body %>
    </main>

    <footer>
      Made with <a href="https://github.com/kkga/ter">Ter</a>.
    </footer>
  </body>
</html>
